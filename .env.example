# ============================================================
# Cloudflare Configuration - Band of Bakers Platform
# ============================================================
# This file documents all environment variables and secrets
# Copy to .env.local and fill in actual values
#
# IMPORTANT: Never commit actual secrets to version control
# Use: wrangler secret put KEY_NAME to set secrets securely
#
# ============================================================

# ============================================================
# KV NAMESPACE IDs
# ============================================================
# Get these from: wrangler kv namespace list
# Set in wrangler.jsonc under "kv_namespaces"

BANDOFBAKERS_KV_CACHE_ID=your_kv_namespace_id_here
BANDOFBAKERS_KV_CACHE_PREVIEW_ID=your_preview_kv_namespace_id_here

# ============================================================
# R2 BUCKET CONFIGURATION
# ============================================================
# Bucket name is set in wrangler.jsonc
# Access via: env.BANDOFBAKERS_R2_STORAGE

BANDOFBAKERS_R2_BUCKET_NAME=bandofbakers-r2-storage

# ============================================================
# D1 DATABASE IDs
# ============================================================
# Get these from: wrangler d1 list
# Set in wrangler.jsonc under "d1_databases"

BANDOFBAKERS_DB_ID=your_d1_database_id_here
BANDOFBAKERS_DB_PREVIEW_ID=your_preview_d1_database_id_here

# ============================================================
# EMAIL SERVICE (Resend)
# ============================================================
# Set via: wrangler secret put BANDOFBAKERS_RESEND_API_KEY
# Get API key from: https://resend.com

BANDOFBAKERS_RESEND_API_KEY=re_your_resend_api_key_here
BANDOFBAKERS_RESEND_FROM_EMAIL=orders@bandofbakers.com
BANDOFBAKERS_RESEND_FROM_NAME=Band of Bakers

# ============================================================
# GOOGLE IDENTITY PLATFORM
# ============================================================
# Set via: wrangler secret put BANDOFBAKERS_GCP_IDENTITY_PLATFORM_API_KEY
# Get credentials from: https://console.cloud.google.com

BANDOFBAKERS_GCP_IDENTITY_PLATFORM_API_KEY=your_gcp_api_key_here
BANDOFBAKERS_GCP_PROJECT_ID=your_gcp_project_id_here
BANDOFBAKERS_GCP_IDENTITY_PLATFORM_TENANT_ID=your_gcp_tenant_id_here

# ============================================================
# STRIPE PAYMENT GATEWAY
# ============================================================
# Set via: wrangler secret put BANDOFBAKERS_STRIPE_SECRET_KEY
# Get keys from: https://dashboard.stripe.com/apikeys

BANDOFBAKERS_STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
BANDOFBAKERS_STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
BANDOFBAKERS_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here

# ============================================================
# LOGGING CONFIGURATION
# ============================================================
# Set in wrangler.jsonc under "vars"

LOG_LEVEL=info
LOG_FORMAT=json

# ============================================================
# ENVIRONMENT IDENTIFICATION
# ============================================================
# Used to identify which environment is running

ENVIRONMENT=development
NODE_ENV=development

# ============================================================
# LOGFLARE LOGGING & ANALYTICS
# ============================================================
# Set via: wrangler secret put BANDOFBAKERS_LOGFLARE_API_KEY
# Get API key from: https://logflare.app

BANDOFBAKERS_LOGFLARE_API_KEY=your_logflare_api_key_here
BANDOFBAKERS_LOGFLARE_SOURCE_ID=your_logflare_source_id_here
NEXT_PUBLIC_LOGFLARE_API_KEY=your_logflare_api_key_here
NEXT_PUBLIC_LOGFLARE_SOURCE_ID=your_logflare_source_id_here
NEXT_PUBLIC_LOGFLARE_DEBUG=false

# ============================================================
# ROLLBAR ERROR TRACKING
# ============================================================
# Set via: wrangler secret put ROLLBAR_SERVER_TOKEN
# Get tokens from: https://rollbar.com
# Note: Browser token is public, server token is secret

NEXT_PUBLIC_ROLLBAR_TOKEN=your_browser_token_here
ROLLBAR_SERVER_TOKEN=your_server_token_here
NEXT_PUBLIC_ROLLBAR_DISABLED=false
NEXT_PUBLIC_ROLLBAR_DEBUG=false

# ============================================================
# CLOUDFLARE TURNSTILE (Bot Prevention)
# ============================================================
# Get credentials from: https://dash.cloudflare.com/?to=/:account/turnstile
# Sitekey (public) for rendering widget in frontend
# Secret key for verifying responses on backend

NEXT_PUBLIC_CLOUDFLARE_TURNSTILE_SITEKEY=your_turnstile_sitekey_here
CLOUDFLARE_TURNSTILE_SECRET_KEY=your_turnstile_secret_key_here

# ============================================================
# CLOUDFLARE ACCOUNT INFORMATION
# ============================================================
# Get from: wrangler whoami

CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here

# ============================================================
# GOOGLE ANALYTICS
# ============================================================
# Get Measurement ID from: https://analytics.google.com
# Format: G-XXXXXXXXXX
# This is public (can be in browser) and used for page tracking

NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G_your_measurement_id_here

# ============================================================
# CLOUDFLARE IMAGES (R2 + Image Transformations)
# ============================================================
# Get account hash from: https://dash.cloudflare.com/[account-id]/images
# Used for building image URLs with custom variants
# Format: https://imagedelivery.net/{account-hash}/{image-id}/{variant}

NEXT_PUBLIC_CLOUDFLARE_IMAGES_ACCOUNT_HASH=your_cloudflare_images_account_hash_here

# Avatar Variants (defined in src/lib/constants/images.ts):
# - thumbnail: 64x64px (lists, comments)
# - small: 128x128px (UI elements)
# - medium: 256x256px (profile pages) - DEFAULT
# - large: 512x512px (modals, zoom)
#
# Product Image Variants:
# - thumbnail: 300px width (grid/list)
# - card: 600px width (product cards) - DEFAULT
# - detail: 1200px width (detail page)
# - hero: 1920px width (hero images)
#
# All variants use WebP format with optimized quality settings


# ============================================================
# NOTES
# ============================================================
#
# 1. SECRETS vs VARS:
#    - Secrets: Sensitive data (API keys, tokens) - set via wrangler secret put
#    - Vars: Non-sensitive configuration - set in wrangler.jsonc
#
# 2. GLOBAL NAMING:
#    All variables use BANDOFBAKERS_ prefix to avoid conflicts
#    with other projects on the same Cloudflare account
#
# 3. SETTING SECRETS:
#    wrangler secret put BANDOFBAKERS_RESEND_API_KEY
#    wrangler secret put BANDOFBAKERS_RESEND_API_KEY --env staging
#    wrangler secret put BANDOFBAKERS_RESEND_API_KEY --env production
#
# 4. LISTING SECRETS:
#    wrangler secret list
#    wrangler secret list --env staging
#
# 5. SOURCE OF TRUTH:
#    wrangler.jsonc is the source of truth for all configuration
#    Never manually edit resources in Cloudflare Dashboard
#
# ============================================================
