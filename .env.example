# ============================================
# Band of Bakers - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control!

# ============================================
# Google Identity Platform Authentication
# ============================================

# Required: Google OAuth Credentials
# Get from: https://console.cloud.google.com > APIs & Services > Credentials
NEXT_PUBLIC_GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET_HERE
GOOGLE_PROJECT_ID=YOUR_GCP_PROJECT_ID_HERE

# Required: Google Identity Platform API Key
# Get from: https://console.cloud.google.com > APIs & Services > Credentials > API Key
# This is used for all authentication operations (email/password, OAuth)
GCP_IDENTITY_PLATFORM_API_KEY=YOUR_API_KEY_HERE

# Optional: Google Identity Platform Tenant ID
# Leave empty for default tenant
# Set to your tenant ID for multi-tenant setups
# When set, all authentication API calls will include the tenantId parameter
# This enables separate user bases per tenant within the same GCP project
GCP_IDENTITY_PLATFORM_TENANT_ID=bandofbakers-i0f6c

# ============================================
# Cloudflare Configuration
# ============================================

# Cloudflare D1 Database (automatically injected in production)
# Local development uses .wrangler/state/v3/d1 for persistence
# DATABASE_URL is set by wrangler.toml bindings

# Cloudflare R2 Storage (for product images, user avatars)
# R2_BUCKET_NAME is set by wrangler.toml bindings
# R2_PUBLIC_URL will be your R2 custom domain or workers.dev URL
NEXT_PUBLIC_R2_PUBLIC_URL=https://assets.bandofbakers.co.uk

# ============================================
# Application Configuration
# ============================================

# Base URL for your application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node environment
NODE_ENV=development

# ============================================
# Optional: Third-Party Services
# ============================================

# Stripe (for payment processing - future implementation)
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=

# Email Service (for order confirmations, password resets)
# RESEND_API_KEY=
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASSWORD=

# Analytics (optional)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=
# NEXT_PUBLIC_POSTHOG_KEY=

# ============================================
# Development Only
# ============================================

# Enable debug logging
DEBUG=false

# Disable telemetry
NEXT_TELEMETRY_DISABLED=1
